<ps:WorkScene x:Class="CodeArt.WPF.Controls.Playstation.LoadingBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ps="clr-namespace:CodeArt.WPF.Controls.Playstation">
    <ps:Page x:Name="page" Title="{Binding Title}" ShowBack="False">
        <Grid>
            <ps:LoadingText 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"  
                Style="{StaticResource TextSM}" 
                Message="{Binding Message}"></ps:LoadingText>
        </Grid>
    </ps:Page>
</ps:WorkScene>
