<UserControl x:Class="CodeArt.WPF.Controls.Playstation.WaitingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ps="clr-namespace:CodeArt.WPF.Controls.Playstation">
    <ps:Page Title="{Binding Title, Mode=OneWay, RelativeSource={RelativeSource AncestorType=ps:WaitingPage, Mode=FindAncestor}}"
             ShowBack="False">
        <Grid>
            <ps:LoadingText HorizontalAlignment="Center" VerticalAlignment="Center" Message="{x:Static ps:Strings.PleaseWait}"></ps:LoadingText>
        </Grid>
    </ps:Page>
</UserControl>
